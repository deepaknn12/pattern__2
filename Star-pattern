	import java.util.Scanner;
public class Solution {
	public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int numRows = scanner.nextInt();
 int i = 1;
        while (i <= numRows) {
            int spaces = 0;
            while (spaces < numRows - i) {
                System.out.print(" ");
                spaces++;
            }
            int stars = 1;
            while (stars <= 2 * i - 1) {
                System.out.print("*");
                stars++;
            } 
            System.out.println();
            i++;
        }
        scanner.close();
    }
}

		
